<div id="book-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Asignar - <%= book.title %></h4>
      </div>
      <%= form_for @book do |f| %>
        <div class="modal-body">
          <% @book.books_stores.new %>
          <%= f.fields_for :books_stores do |bs| %>

            <div class="form-group">
              <%= bs.label :store_id, "Selecciona libreria *:" %> <br>
              <%= bs.collection_select :store_id, @stores, :id, :codename, 
                  { include_blank: 'Seleccione Unidad'},
                  {class: "form-control"}  %>
            </div>
            <div class="form-group">
             <%= bs.text_field :quantity, autofocus: true, placeholder: "Cantidad", class: "form-control" , required: "required"%>
            </div>
          <%end%>
         
        </div>

        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>