<nav>
 <ul class="pager">
  <li class="previous <%= page == 0 ? 'disabled' : '' %>">
   <%= link_to_if page > 0, "&larr; Previous".html_safe,
                  books_path(keywords: keywords, page: page - 1) %>
  </li>
  <li class="next <%= page == @number_of_pages ? 'disabled' : '' %>">
   <%= link_to_if page < @number_of_pages, "Next &rarr;".html_safe,
                  books_path(keywords: keywords, page: page + 1) %>
  </li>
 </ul>
</nav>

