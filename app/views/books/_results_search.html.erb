 <table class="table">
 <thead>
  <tr>
     <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Title</th>
   <th>Author</th>
   <th>Year</th>
   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="books">
   <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.author %></td>
     <td><%= book.year %></td>
     <!--<td>
      <%=  link_to modal_asign_book_path(book), :remote=>true  do %>
       <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Asign
      <% end %>

     </td>-->
     <td>
      <%= button_to edit_book_path(book), {method: :get, class: "btn btn-info"} do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Edit
      <% end %>
     </td>
     <td>
      <%= button_to book, { method: :delete, data: { confirm: 'Are you sure ?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Delete
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>