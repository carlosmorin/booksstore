<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(books_store) do |f| %>
      <% if books_store.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(books_store.errors.count, "error") %> prohibited this books_store from being saved:</h2>

        <ul>
         <% books_store.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
       </div>
      <% end %>
      <div class="col-lg-6 col-md-6">

        <div class="form-group">
          <label>Book *:</label>
          <%= f.collection_select :book_id, @books, :id, :title, 
            {include_blank: 'Select a book'},
            {class: "form-control", required: "required"}  %>

        </div>

        <div class="form-group">
          <label>Store *:</label>
            <%= f.collection_select :store_id, @stores, :id, :codename, 
            {include_blank: 'Select a store'},
            {class: "form-control", required: "required"} %>
        </div>

        <div class="form-group">
          <label>Quiantity *:</label>
          <%= f.number_field :quantity, placeholder: "Cantidad", class: "form-control" , required: "required"%>
        </div>

        <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-success" %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>