 <table class="table">
 <thead>
  <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Codename</th>
   <th>Address</th>
   <th>Phone</th>
   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="stores">
   <% @stores.each do |store| %>
    <tr>
     <td>
      <%= link_to store.codename, controller: "stores", action: "show_content", id: store.id %>
     </td>
     <td><%= store.address %></td>
     <td><%= store.phone %></td>

     <td>
      <%= button_to edit_store_path(store), {method: :get, class: "btn btn-info"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Edit
      <% end %>
     </td>
     <td>
      <%= button_to store, { method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Delete
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>